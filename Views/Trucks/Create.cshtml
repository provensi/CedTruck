@model CedTruck.Models.Truck


@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Truck</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="truckModel" class="control-label">Truck Model</label>
                @Html.DropDownListFor(x => x.Id, (IEnumerable<SelectListItem>)ViewBag.TruckModels, "Select a model", new { @id = "truckModel", @class = "form-control" })
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearFabrication" class="control-label"></label>
                <input asp-for="YearFabrication" class="form-control" />
                <span asp-validation-for="YearFabrication" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearModel" class="control-label"></label>
                <input asp-for="YearModel" class="form-control" />
                <span asp-validation-for="YearModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
